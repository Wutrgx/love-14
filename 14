    <script>
        function spinWheel() {
            const wheel = document.getElementById('wheel');
            const popup = document.getElementById('popup');
            const popupMessage = document.getElementById('popupMessage');

            // ‡∏™‡∏∏‡πà‡∏°‡∏°‡∏∏‡∏°‡∏´‡∏°‡∏∏‡∏ô (‡∏£‡∏∞‡∏´‡∏ß‡πà‡∏≤‡∏á 1000 - 5000 ‡∏≠‡∏á‡∏®‡∏≤)
            const randomAngle = Math.floor(Math.random() * 4000) + 1000;

            // ‡∏´‡∏°‡∏∏‡∏ô‡∏ß‡∏á‡∏•‡πâ‡∏≠
            wheel.style.transition = 'transform 4s ease-out';
            wheel.style.transform = `rotate(${randomAngle}deg)`;

            // ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå‡πÉ‡∏ô‡∏õ‡πä‡∏≠‡∏õ‡∏≠‡∏±‡∏û
            setTimeout(() => {
                const result = Math.floor((randomAngle % 360) / 90);
                const results = ["100 ‡∏ö‡∏≤‡∏ó", "200 ‡∏ö‡∏≤‡∏ó", "300 ‡∏ö‡∏≤‡∏ó", "500 ‡∏ö‡∏≤‡∏ó"];
                popupMessage.textContent = `üéâ ‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ: ${results[result]} üéâ`;
                popup.style.display = 'block';
            }, 4000);
        }

        function closePopup() {
            document.getElementById('popup').style.display = 'none';
        }
    </script>
